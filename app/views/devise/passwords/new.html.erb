<div id="remind-password-box" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info" >
        <div class="panel-heading">
            <div class="panel-title">Forgot your password?</div>
        </div>
        <div class="panel-body" >
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: "form-horizontal", html: { method: :post }) do |f| %>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <%= f.email_field :email, autofocus: true, placeholder: "email", class: "form-control" %>
                </div>
                <div class="form-group">
                    <div class="col-sm-12 controls">
                        <a id="btn-login" href="#" class="btn btn-success">Login  </a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 control">
                        <div class="hline">
                            <%= render "devise/shared/links" %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
